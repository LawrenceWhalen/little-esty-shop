<h1 id="dash">Admin Dashboard</h1>


<ul>
  <li><%= link_to "Merchants Index", '/admin/merchants' %></li>
  <li><%= link_to "Invoices Index", '/admin/invoices' %></li>
</ul>


<h2>Top 5 Customers:</h2>
<ol>
  <% @top_customers.each do |customer| %>
    <li><%= "#{customer.first_name} #{customer.last_name}: #{customer.tran_count} transactions" %></li>
  <% end %>
</ol><br>

<h2>Incomplete Invoices</h2>
<ul>
  <% @incomplete_invoices.each do |invoice| %>
    <li><%= link_to( "Invoice #{invoice.id}", "/admin/invoices/#{invoice.id}" ) %></li>
  <% end %>
</ul>
