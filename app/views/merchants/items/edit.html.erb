<h2><%= @merchant.name %></h2> 

<h3>Edit <%= @item.name %></h3>

<%= form_with model: @item, url: merchant_item_path(@merchant.id, @item.id), method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :unit_price %>
  <%= f.number_field :unit_price,  in: 1.0..999999999.0, step: 0.01%>
  <%= f.submit 'Update item' %>
<% end %>