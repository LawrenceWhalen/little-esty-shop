<h2> <%= @merchant.name %> </h2>

<%= link_to "My Items", "/merchants/#{@merchant_id}/items" %>
<%= link_to "My Invoices", "/merchants/#{@merchant_id}/invoices" %>

<h3>Favorite Customers</h3>
<% @top_customers.each do |customer| %>
  <p> <%= customer.first_name %> <%= customer.last_name %>: <%= customer.transaction_count %> purchases </p>
<% end %>
